    <body>

      <div class="row">
        <div class="nav">
          <!-- FIX DUMMY LINKS -->
          <ul>
            <li><i class="fa fa-home fa-2x"></i></li>
            <li><a href="#">Profile</a></li>
            <li><a href="">Friends</a></li>
          </ul>
        </div>
      </div>

      <div class="jumbotron">
        <h1>Decisions</h1>
      </div>

      <div class="container">
        <h3>Login:</h3>
        <!-- NEED USER AUTH FORM -->
        <form id="sign-in" method="post" action="/sessions">
          <label class="label" for="email">Email</label>
          <input type="email" name="email" placeholder="e.g., me@example.com" value="<%= @email %>" required><br>
          <label class="label" for="password">Password</label>
          <input type="password" name="password" placeholder="6 or more characters" required>
          <br>
          <div class="submit"><input type="submit" value="Sign In"></div>
        </form>
      </div>

      <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
      <!-- Include all compiled plugins (below), or include individual files as needed -->
      <script src="js/bootstrap.min.js"></script>
    </body>
    </html>